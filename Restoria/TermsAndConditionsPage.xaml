<?xml version="1.0" encoding="UTF-8" ?>
<ContentPage
    x:Class="Restoria.TermsAndConditionsPage"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:d="http://schemas.microsoft.com/dotnet/2021/maui/design"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:local="clr-namespace:Restoria">
    <AbsoluteLayout>
        <ScrollView WidthRequest="400" HeightRequest="600">
            <VerticalStackLayout Padding="30,0"
                                 Spacing="25">
                <Label StyleClass="Header" Text="Privacy Policy "/>
            </VerticalStackLayout>
        </ScrollView>

        <VerticalStackLayout AbsoluteLayout.LayoutBounds="50,650,300,0">
            <Button
                x:Name="PP_OkayButton"
                Text="Continue"
                SemanticProperties.Hint="Continue to the Main Application"
                HorizontalOptions="Fill"
                Clicked="PP_OkayButton_Clicked"/>
        </VerticalStackLayout>
    </AbsoluteLayout>
</ContentPage>
